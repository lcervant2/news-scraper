<div class="container my-4">

    <a href="/" class="btn btn-light btn-sm mb-4"><i class="fas fa-arrow-left"></i>&nbsp;&nbsp;Back to home</a>

    <div class="row">

        <div class="col-md-8 offset-md-2">

            {{> articles/article
                    article=article
            }}

            <form action="/articles/{{article.id}}/comments" method="post" class="mb-4">
                <div class="input-group">
                    <input type="text" name="comment" class="form-control" placeholder="Write a comment...">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-dark">Post</button>
                    </div>
                </div>
            </form>

            {{#unless article.comments.length}}
                <div class="card text-center">
                    <div class="card-body">
                        <p class="card-text mb-0">No comments</p>
                    </div>
                </div>
            {{else}}
                {{#each article.comments}}
                    {{> comments/comment
                        comment=this
                    }}
                {{/each}}
            {{/unless}}

        </div>

    </div>

</div>